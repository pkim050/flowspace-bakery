%h3 New Cookie for oven '#{@oven.name}'

= form_for [@oven, @cookie] do |f|
  .row
    .small-8.columns
      = f.label :fillings
  .row
    .small-8.columns
      = f.text_field :fillings
  .row
    .small-8.columns
      = f.label "How many cookies do you want to make?"
  .row
    .small-8.columns
      = number_field_tag 'quantity', '1', min: 1, max: 10
  .row
    .small-8.columns
      = f.submit 'Mix and bake', class: 'button'



